<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#ffffff"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_weight="2.3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="top|center"
        android:orientation="vertical"
        android:gravity="top">

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:background="#333333"
            android:gravity="center"
            android:text="학교 인증"
            android:textColor="#ffffff"
            android:textSize="25dp"/>

        <ImageView
            android:layout_weight="3"
            android:layout_gravity="right|bottom"
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:background="@drawable/email_check"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/gg_line"
        android:orientation="vertical">

        <TextView
            android:layout_weight="0.5"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="#000000"
            android:text="※안내사항
"       />

        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="#000000"
            android:text="- 발송된 이메일에 포함된 번호를 입력하시면 인증이 완료됩니다."/>

        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="#000000"
            android:text="- (전화번호, 웹메일) 매칭으로 새 전화번호로 인증시, 기존 전화번호의 인증은 해제됩니다."/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:background="@drawable/gg_line"
        android:orientation="vertical">

        <TextView
            android:layout_weight="0.5"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:layout_height="0dp"
            android:text="※이메일 입력"/>
        <TextView
            android:layout_weight="0.5"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="- @kangwon.ac.kr 이메일 주소를 입력하세요."/>

        <TextView
            android:layout_weight="1.5"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="- 메일이 오지 않을 경우 메일주소, 스팸함, 스팸설정, 메일함 용량 등 을 확인해보시고, (재발송)을 눌러 메일을 다시 요청해주세요."/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.5"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <EditText
            android:layout_weight="1"
            android:id="@+id/authEmail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="#ffffff"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:hint="I D"
            android:gravity="center"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:textColor="#000000"
            android:text=" @kangwon.ac.kr"
            android:textSize="18sp"/>
    </LinearLayout>

<LinearLayout
    android:layout_weight="0.5"
    android:layout_width="match_parent"
    android:layout_height="0dp">
    <Button
        android:id="@+id/authBtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:text="이메일 전송"
        android:textSize="17sp"/>
</LinearLayout>



</LinearLayout>
